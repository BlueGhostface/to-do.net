@* @model TModel *@
@model Mvc.Models.Todo.TodoIndexViewModel


<!DOCTYPE html>

<html>
<head>
    <title>Detail</title>
</head>
<body>

<div class="position-relative">
    <!-- Button outside the container, but aligned -->
    <a asp-action="Index"
       class="btn btn-secondary rounded-5 position-absolute "
       style="left: -4.5rem;">
        <i class="bi bi-arrow-return-left"></i>
    </a>
</div>

<div class="container">
    <div class="row ">
        <h3 class="border-bottom border-1 pb-2">@Model.Title</h3>
    </div>


    <div class="row">
        <h5 class="py-2 border-bottom border-1">Beschrijving</h5>
        <p>@Model.Description</p>
    </div>

    <div class="row">
        <h5 class="py-2 border-bottom border-1">Status</h5>
        <p> Status: @Model.StatusItem</p>
    </div>
</div>

<p>Verantwoordelijke gebruiker: @Model.Name</p>
<div class="d-inline-flex">
    <a asp-action="Edit" class="btn btn-primary mx-1 " asp-route-id="@Model.Id">Edit<i
            class="ps-2 bi bi-pencil-square"></i></a>
    <a asp-action="Resolve" class="btn btn-secondary mx-1">Resolve<i class="ps-2 bi bi-clipboard-check"></i></a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button class="btn btn-danger mx-1" role="button">Remove <i class="ps-2 bi bi-trash-fill"></i></button>
    </form>


</div>


</body>
</html>