@model IEnumerable<Mvc.Models.Todo.TodoIndexViewModel>


@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <title>TODO INDEX</title>
</head>
<body>
<div>
    <h2>TODO INDEX</h2>
    <div>
        <p>in the following table you will see all the Todo's for this application and the users assigned to it.</p>
    </div>

    <div class="container mt-4">
        <div class="row">
            @foreach (var todo in Model)
            {
                <div class="col-sm-6 col-md-3 mb-4">
                    <div class="card h-100" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@todo.Title</h5>
                            <p class="card-text">@todo.Description</p>
                            <a class="btn btn-secondary" asp-controller="Todo" asp-action="Detail"
                               asp-route-id="@todo.Id"> Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <a class="btn btn-primary" role="button" asp-controller="Todo" asp-action="New">
        Create new todo
    </a>


</div>
</body>
</html>